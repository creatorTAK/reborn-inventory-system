rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // チャット画像・ファイル
    match /chat/{roomId}/{fileName} {
      allow read: if true;  // 誰でも読み取り可能
      allow write: if true; // 誰でも書き込み可能（一時的）
    }

    // 商品画像（管理番号ごとに整理）
    // パス: /products/{managementNumber}/{fileName}
    // 例: /products/AA-1013/image_001.jpg
    match /products/{managementNumber}/{fileName} {
      allow read: if true;   // 公開読み取り（API連携用）
      allow write: if true;  // 一時的に全員書き込み可能（後で認証制限追加）
    }

    // ユーザーアイコン
    match /userIcons/{userId}/{fileName} {
      allow read: if true;
      allow write: if true;
    }

    // フィードバック添付画像
    match /feedback/{fileName} {
      allow read: if true;
      allow write: if true;
    }
  }
}
